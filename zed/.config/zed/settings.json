// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    // UI CONFIG
    "ui_font_size": 20,
    "ui_font_family": "JetBrains Mono NL",
    "buffer_font_size": 18,
    "buffer_font_family": "JetBrains Mono NL",
    "cursor_shape": "block",
    "cursor_blink": true,
    "indent_guides": {
        "enabled": true,
        "line_width": 1,
        "active_line_width": 3,
        "coloring": "fixed",
        "background_coloring": "disabled"
    },

    // EDITOR CONFIG
    "soft_wrap": "editor_width",
    "tab_size": 4,
    "show_whitespaces": "none",
    "auto_indent": true,
    "auto_indent_on_paste": true,
    "ensure_final_newline_on_save": true,
    "line_indicator_format": "long",

    // THEME CONFIG
    "theme": {
        "mode": "system",
        "light": "Base16 Classic Light",
        "dark": "Base16 Classic Dark"
    },

    // LANGUAGE CONFIG
    "autosave": "off",
    "languages": {
        "Python": {
            "formatter": [
                { "code_actions": { "source.organizeImports.ruff": true } },
                { "language_server": { "name": "ruff" } }
            ],
            "language_servers": ["basedpyright", "ruff"],
            "format_on_save": null
        },
        "C++": {
            "formatter": [
                {
                    "external": {
                        "command": "/usr/bin/clang-format",
                        "arguments": [
                            "--style=file",
                            "--assume-filename={buffer_path"
                        ]
                    }
                }
            ],
            "language_servers": ["clangd"],
            "format_on_save": null
        },
        "Rust": {}
    },

    // TELEMETRY CONFIG
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },

    // KEYMAP CONFIG
    "base_keymap": "VSCode",

    // EDIT PREDICTION CONFIG
    "features": {
        "edit_prediction_provider": "copilot"
    },
    "show_edit_predictions": true,
    "edit_predictions": {
        "mode": "subtle",
        "copilot": {
            "enterprise_uri": null,
            "proxy": null,
            "proxy_no_verify": null
        }
    },

    // HINT CONFIG
    "diagnostics_max_severity": "hint",
    "inlay_hints": {
        "show_type_hints": false,
        "show_value_hints": false,
        "show_parameter_hints": false,
        "show_background": false,
        "edit_debounce_ms": 700,
        "scroll_debounce_ms": 50,
        "toggle_on_modifiers_press": {
            "control": false
        }
    },

    // BOTTOM BAR CONFIG
    "status_bar": {
        "active_language_button": true,
        "cursor_position_button": true
    },

    // TAB BAR CONFIG
    "tab_bar": {
        "show": true,
        "show_nav_history_buttons": true,
        "show_tab_bar_buttons": false
    },

    // TABS CONFIG
    "tabs": {
        "close_position": "right",
        "file_icons": false,
        "git_status": true,
        "show_close_button": "hover",
        "show_diagnostics": "all"
    },

    // TITLE BAR CONFIG (TOP)
    "title_bar": {
        "show_branch_icon": true,
        "show_branch_name": true,
        "show_project_items": false,
        "show_onboarding_banner": false,
        "show_user_picture": false,
        "show_sign_in": true,
        "show_menus": false
    },

    // TOOL BAR CONFIG
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": false,
        "selections_menu": false,
        "agent_review": true,
        "code_actions": true
    },

    // MINIMAP
    "minimap": {
        "show": "never"
    },

    // GIT
    "git": {
        "git_gutter": "tracked_files",
        "gutter_debounce": 0,
        "hunk_style": "unstaged_hollow",
        "branch_picker": {
            "show_author_name": true
        },
        "inline_blame": {
            "enabled": true,
            "show_commit_summary": true,
            "delay_ms": 0,
            "min_column": 0,
            "padding": 7
        }
    },

    // EXPLORER CONFIG
    "project_panel": {
        "button": true,
        "default_width": 320,
        "folder_icons": false,
        "file_icons": true,
        "hide_root": false,
        "indent_size": 20,
        "auto_fold_dirs": false,
        "drag_and_drop": true,
        "git_status": true,
        "auto_reveal_entries": true,
        "entry_spacing": "comfortable",
        "starts_open": false,
        "dock": "left",
        "hide_gitignore": false,
        "show_diagnostics": "all",
        "sticky_scroll": true,
        "scrollbar": {
            "show": "never"
        },
        "indent_guides": {
            "show": "always"
        }
    },

    // COLLABORATION PANEL CONFIG
    "collaboration_panel": {
        "button": false
    },

    // OUTLINE PANEL CONFIG
    "outline_panel": {
        "button": true,
        "default_width": 320,
        "auto_fold_dirs": true,
        "auto_reveal_entries": true,
        "dock": "left",
        "file_icons": true,
        "folder_icons": false,
        "git_status": true,
        "indent_size": 20,
        "scrollbar": {
            "show": "never"
        },
        "indent_guides": {
            "show": "always"
        },
        "expand_outlines_with_depth": 0
    },

    // GIT PANEL CONFIG
    "git_panel": {
        "button": true,
        "default_width": 320,
        "dock": "left",
        "collapse_untracked_diff": true,
        "fallback_branch_name": "main",
        "scrollbar": {
            "show": "never"
        },
        "sort_by_path": true,
        "status_style": "label_color"
    },

    // TERMINAL CONFIG
    "terminal": {
        "alternate_scroll": "off",
        "blinking": "on",
        "copy_on_select": false,
        "keep_selection_on_copy": false,
        "button": true,
        "cursor_shape": "block",
        "default_height": 320,
        "default_width": 640,
        "dock": "bottom",
        "shell": "system",
        "scrollbar": {
            "show": "never"
        },
        "toolbar": {
            "breadcrumbs": false
        },
        "working_directory": "current_project_directory",
        "detect_venv": {
            "on": {
                "directories": [".env", "env", ".venv", "venv"],
                "activate_script": "default"
            }
        }
    },

    // AGENT CONFIG
    "agent": {
        "default_model": {
            "model": "gpt-4.1",
            "provider": "copilot_chat"
        },
        "button": true,
        "enabled": true,
        "dock": "right",
        "always_allow_tool_actions": true,
        "enable_feedback": false,
        "play_sound_when_agent_done": true
    }
}
